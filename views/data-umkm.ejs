    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js" integrity="sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>

<body class="transition-page-1">

        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <!-- header start -->
    <%- include('header'); -%>
    <!-- header end   -->


    <div class="container mt-1 main-container">
        <div class="">
            <div class="row mt-5">
                <div class="col-md-4 col-lg-3">
                    <div id="accordion">
                        <%- include('sidebar'); -%>
                    </div>
                    <div class="mb-5 mb-5 mt-5">
                        <li class="nav-item dropdown list-unstyled">
                            <a class="dropdown-toggle active btn btn-yellowwhite" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-chart-column"></i>    
                                Ubah Grafik
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><button onclick="ChartType('bar')" class="dropdown-item btn"  href="#"><img src="https://img.icons8.com/office/16/000000/futures.png"/>&nbsp&nbspBar Chart</button></li>
                                <li><button onclick="ChartType('pie')" class="dropdown-item"  href="#"><img src="https://img.icons8.com/flat-round/16/000000/pie-chart-3d.png"/>&nbsp&nbspPie Chart</button></li>
                                <li><button onclick="ChartType('doughnut')" class="dropdown-item"  href="#"><img src="https://img.icons8.com/office/16/000000/doughnut-chart--v1.png"/>&nbsp&nbspDoughnut Chart</button></li>
                                
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                            </ul>
                        </li>
                    </div>
                    
                </div>
                <div class="col-md-8 col-lg-9 align-self-center">
                    <div class="d-flex justify-content-center">
                        <h2 style="font-family: 'Barlow'; font-weight:bold;">DATA UMKM</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
           
        </div>
    </div>

  
        <div class="container-fluid">
            <canvas id="Usaha-Mikro-Chart" style="position: relative; height:40vh; width:80vw; max-width: fit-content; min-width: fit-content;"></canvas>
        </div>
   


        <br><br><br><br>

        <div class="card-body card mx-auto col-11 p-5 pt-5 shadow-lg border-3">
            <div class="mb-2">
                <div class="float-start me-3 ms-3"> 
                    <h3>&nbsp&nbsp <span class="text-decoration-underline h3">Data Tabel UMKM</span>&nbsp&nbsp</h3>
                </div>
            </div>
          
           <!-- First Row -->
           <table id="dtHorizontalVerticalExample" class="table table-striped table-bordered table-sm "
           cellspacing="0" width="100%" style="color:  var(--textcolor);">
           <thead>
               <tr style="color:  var(--textcolor);">
                   <th scope="col" class="text-center">No</th>
                   <th scope="col" class="text-center">Usaha Mikro</th>
                   <th scope="col" class="text-center">Usaha Menengah</th>
                   <th scope="col" class="text-center">Usaha Kecil</th>
                   <th scope="col" class="text-center">Total</th>
                   

               </tr>
           </thead>
           <tbody>
            <% var number = 1; %>
               <tr style="color:  var(--textcolor);">
                   <td scope="row" class="text-center"><%= number %></td>

                   <% for (let row of rows1) {%>
                   <td scope="row" class="text-center"><%= row.Tmikro %></td>
                   <% }%>
                   
                   <% for (let row of rows3) {%>
                   <td scope="row" class="text-center"><%= row.Tmenengah %></td>
                   <% }%>

                   <% for (let row of rows3) {%>
                   <td scope="row" class="text-center"><%= row.Tkecil %></td>
                   <% }%>

                   <% for (let row of rows4) {%>
                   <td scope="row" class="text-center"><%= row.TotalUMKM %></td>
                   <% }%>
                 
                   <% number++; %>
               </tr>                        
           </tbody>
           
       </table>
            
        </div>
    <br><br>

    <%-include('scrollUp'); -%>    
        <%-include('footer'); -%>
        <script src="/javascripts/document_vertical.js"></script>
        <script src="/javascripts/stats-umkm.js"></script>
        <script src="/javascripts/scrollTop.js"></script>

        <script src="https://kit.fontawesome.com/bd1d04a488.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
                integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
                integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
                crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/js/all.min.js"
                integrity="sha512-8pHNiqTlsrRjVD4A/3va++W1sMbUHwWxxRPWNyVlql3T+Hgfd81Qc6FC5WMXDC+tSauxxzp1tgiAvSKFu1qIlA=="
                crossorigin="anonymous" referrerpolicy="no-referrer"></script>
                <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
</body>

</html>